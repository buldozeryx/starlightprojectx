}

-- –ë–∞–∑–∞ –¥–∞–Ω–Ω—ã—Ö –≤ –ø–∞–º—è—Ç–∏
local database = {
    keys = {
        ["STAR-7B9X-2F4K-8R3M"] = {
            expiry = os.time() + 30*86400,
            hwid = nil,
            activated = false,
            created = os.time()
        }
    },
    hwids = {},
    requests = {}
}

-- –ü–æ–ª—É—á–µ–Ω–∏–µ HWID
function getHWID()
    local identifiers = {}
    
    pcall(function()
        table.insert(identifiers, tostring(game:GetService("RbxAnalyticsService"):GetClientId()))
    end)
    
    pcall(function()
        table.insert(identifiers, tostring(localPlayer.UserId))
    end)
    
    pcall(function()
        table.insert(identifiers, tostring(game.PlaceId))
    end)
    
    -- –ì–µ–Ω–µ—Ä–∞—Ü–∏—è —Ö–µ—à–∞
    local data = table.concat(identifiers, "|")
    local hash = 0
    
    for i = 1, #data do
        hash = (hash * 31 + string.byte(data, i)) % 0xFFFFFFF
    end
    
    return string.format("SL-%08X", hash)
end

-- –§—É–Ω–∫—Ü–∏—è –æ—Ç–ø—Ä–∞–≤–∫–∏ –≤ Discord (–†–ê–ë–û–ß–ê–Ø)
function sendDiscordWebhook(data)
    local success, result = pcall(function()
        local payload = {
            embeds = {{
                title = data.title or "Starlight System",
                description = data.description or "",
                color = data.color or 10181046,
                fields = data.fields or {},
                timestamp = DateTime.now():ToIsoDate(),
                footer = {
                    text = "Starlight v2.0 ‚Ä¢ " .. os.date("%H:%M:%S")
                }
            }}
        }
        
        -- –ò—Å–ø–æ–ª—å–∑—É–µ–º requestAsync –¥–ª—è –Ω–∞–¥–µ–∂–Ω–æ—Å—Ç–∏
        local response = HttpService:RequestAsync({
            Url = CONFIG.DISCORD_WEBHOOK,
            Method = "POST",
            Headers = {
                ["Content-Type"] = "application/json"
            },
            Body = HttpService:JSONEncode(payload)
        })
        
        return response.Success
    end)
    
    return success
end

-- –ì–µ–Ω–µ—Ä–∞—Ü–∏—è –Ω–æ–≤–æ–≥–æ –∫–ª—é—á–∞
function generateKey(days)
    days = days or CONFIG.KEY_EXPIRY_DAYS
    
    local chars = "ABCDEFGHJKLMNPQRSTUVWXYZ23456789"
    local segments = {}
    
    for i = 1, 3 do
        local segment = ""
        for j = 1, 4 do
            segment = segment .. chars:sub(math.random(1, #chars), math.random(1, #chars))
        end
        table.insert(segments, segment)
    end
    
    local key = "STAR-" .. table.concat(segments, "-")
    local expiry = os.time() + (days * 86400)
    
    database.keys[key] = {
        expiry = expiry,
        hwid = nil,
        activated = false,
        created = os.time()
    }
    
    -- –û—Ç–ø—Ä–∞–≤–∫–∞ –≤ Discord
    sendDiscordWebhook({
        title = "üîë –ù–æ–≤—ã–π –∫–ª—é—á Starlight",
        description = "–°–≥–µ–Ω–µ—Ä–∏—Ä–æ–≤–∞–Ω –Ω–æ–≤—ã–π –∫–ª—é—á –¥–æ—Å—Ç—É–ø–∞",
        color = 10181046,
        fields = {
            {name = "–ö–ª—é—á", value = "```" .. key .. "```", inline = false},
            {name = "–°—Ä–æ–∫", value = days .. " –¥–Ω–µ–π", inline = true},
            {name = "–ò—Å—Ç–µ–∫–∞–µ—Ç", value = os.date("%d.%m.%Y", expiry), inline = true}
        }
    })
    
    return key
end

-- –ü—Ä–æ–≤–µ—Ä–∫–∞ –∫–ª—é—á–∞
function validateKey(key)
    -- –û—á–∏—Å—Ç–∫–∞ –∫–ª—é—á–∞ –æ—Ç –ø—Ä–æ–±–µ–ª–æ–≤
    key = string.gsub(key, "%s+", "")
    
    -- –ü—Ä–æ–≤–µ—Ä–∫–∞ —Ñ–æ—Ä–º–∞—Ç–∞
    if not string.match(key, "^STAR%-[A-Z2-9]+%-[A-Z2-9]+%-[A-Z2-9]+$") then
        return false, "–ù–µ–≤–µ—Ä–Ω—ã–π —Ñ–æ—Ä–º–∞—Ç –∫–ª—é—á–∞"
    end
    
    -- –ü—Ä–æ–≤–µ—Ä–∫–∞ —Å—É—â–µ—Å—Ç–≤–æ–≤–∞–Ω–∏—è
    if not database.keys[key] then
        sendDiscordWebhook({
            title = "üö´ –ù–µ–¥–µ–π—Å—Ç–≤–∏—Ç–µ–ª—å–Ω—ã–π –∫–ª—é—á",
            description = "–ü–æ–ø—ã—Ç–∫–∞ –∏—Å–ø–æ–ª—å–∑–æ–≤–∞–Ω–∏—è –Ω–µ—Å—É—â–µ—Å—Ç–≤—É—é—â–µ–≥–æ –∫–ª—é—á–∞",
            color = 15158332,
            fields = {
                {name = "–ö–ª—é—á", value = "```" .. key .. "```", inline = false},
                {name = "–í—Ä–µ–º—è", value = os.date("%H:%M:%S"), inline = true},
                {name = "–ò–≥—Ä–æ–∫", value = localPlayer.Name, inline = true}
            }
        })
        return false, "–ù–µ–≤–µ—Ä–Ω—ã–π –∫–ª—é—á"
    end
    
    local keyData = database.keys[key]
    local currentHWID = getHWID()
    
    -- –ü—Ä–æ–≤–µ—Ä–∫–∞ —Å—Ä–æ–∫–∞ –¥–µ–π—Å—Ç–≤–∏—è
    if os.time() > keyData.expiry then
        sendDiscordWebhook({
            title = "‚è∞ –ö–ª—é—á –∏—Å—Ç–µ–∫",
            description = "–ü–æ–ø—ã—Ç–∫–∞ –∏—Å–ø–æ–ª—å–∑–æ–≤–∞–Ω–∏—è –ø—Ä–æ—Å—Ä–æ—á–µ–Ω–Ω–æ–≥–æ –∫–ª—é—á–∞",
            color = 16776960,
            fields = {
                {name = "–ö–ª—é—á", value = "```" .. key .. "```", inline = false},
                {name = "–ò—Å—Ç–µ–∫", value = os.date("%d.%m.%Y", keyData.expiry), inline = true},
                {name = "HWID", value = "```" .. currentHWID .. "```", inline = true}
            }
        })
        return false, "EXPIRED"
    end
    
    -- –ü—Ä–æ–≤–µ—Ä–∫–∞ HWID
    if CONFIG.HWID_CHECK then
        if not keyData.activated then
            -- –ü–µ—Ä–≤–∞—è –∞–∫—Ç–∏–≤–∞—Ü–∏—è
            keyData.hwid = currentHWID
            keyData.activated = true
            database.hwids[currentHWID] = key
            
            sendDiscordWebhook({
                title = "‚úÖ –ö–ª—é—á –∞–∫—Ç–∏–≤–∏—Ä–æ–≤–∞–Ω",
                description = "–ù–æ–≤—ã–π –∫–ª—é—á —É—Å–ø–µ—à–Ω–æ –∞–∫—Ç–∏–≤–∏—Ä–æ–≤–∞–Ω",
                color = 5763719,
                fields = {
                    {name = "–ö–ª—é—á", value = "```" .. key .. "```", inline = false},
                    {name = "HWID", value = "```" .. currentHWID .. "```", inline = true},
                    {name = "–ò—Å—Ç–µ–∫–∞–µ—Ç", value = os.date("%d.%m.%Y", keyData.expiry), inline = true}
                }
            })
        elseif keyData.hwid ~= currentHWID then
            sendDiscordWebhook({
                title = "‚ö†Ô∏è –ù–µ—Å–æ–≤–ø–∞–¥–µ–Ω–∏–µ HWID",
                description = "–ü–æ–ø—ã—Ç–∫–∞ –∏—Å–ø–æ–ª—å–∑–æ–≤–∞–Ω–∏—è –∫–ª—é—á–∞ —Å –¥—Ä—É–≥–æ–≥–æ —É—Å—Ç—Ä–æ–π—Å—Ç–≤–∞",
                color = 16753920,
                fields = {
                    {name = "–ö–ª—é—á", value = "```" .. key .. "```", inline = false},
                    {name = "–û–∂–∏–¥–∞–µ–º—ã–π HWID", value = "```" .. keyData.hwid .. "```", inline = true},
                    {name = "–¢–µ–∫—É—â–∏–π HWID", value = "```" .. currentHWID .. "```", inline = true}
                }
            })
            return false, "–ù–µ–≤–µ—Ä–Ω–æ–µ —É—Å—Ç—Ä–æ–π—Å—Ç–≤–æ"
        end
    end
    
    -- –£—Å–ø–µ—à–Ω–∞—è –ø—Ä–æ–≤–µ—Ä–∫–∞
    sendDiscordWebhook({
        title = "‚ú® –£—Å–ø–µ—à–Ω—ã–π –¥–æ—Å—Ç—É–ø",
        description = "–ö–ª—é—á —É—Å–ø–µ—à–Ω–æ –ø—Ä–æ–≤–µ—Ä–µ–Ω",
        color = 3447003,
        fields = {
            {name = "–ö–ª—é—á", value = "```" .. key .. "```", inline = false},
            {name = "–ò–≥—Ä–æ–∫", value = localPlayer.Name, inline = true},
            {name = "–û—Å—Ç–∞–ª–æ—Å—å –¥–Ω–µ–π", value = math.floor((keyData.expiry - os.time()) / 86400), inline = true}
        }
    })
    
    return true, "SUCCESS", {
        expiry = keyData.expiry,
        daysLeft = math.floor((keyData.expiry - os.time()) / 86400),
        hwid = currentHWID
    }
end

-- –°–æ–∑–¥–∞–Ω–∏–µ –ø—Ä–µ–º–∏—É–º GUI
