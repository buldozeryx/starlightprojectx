    keyBox.Position = UDim2.new(0, 10, 0, 5)
    keyBox.BackgroundTransparency = 1
    keyBox.PlaceholderText = "–í–≤–µ–¥–∏—Ç–µ –≤–∞—à –∫–ª—é—á STAR-XXXX-XXXX-XXXX"
    keyBox.PlaceholderColor3 = Color3.fromRGB(150, 150, 170)
    keyBox.Text = ""
    keyBox.TextColor3 = Color3.new(1, 1, 1)
    keyBox.TextSize = 18
    keyBox.Font = Enum.Font.Gotham
    keyBox.ClearTextOnFocus = false
    keyBox.Parent = inputFrame
    
    -- –ö–Ω–æ–ø–∫–∞ –∞–∫—Ç–∏–≤–∞—Ü–∏–∏
    local activateButton = Instance.new("TextButton")
    activateButton.Name = "ActivateButton"
    activateButton.Size = UDim2.new(0, 200, 0, 50)
    activateButton.Position = UDim2.new(0.5, -100, 0.7, 0)
