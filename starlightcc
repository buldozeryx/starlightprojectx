    buttonCorner.Parent = activateButton
    
    -- –≠—Ñ—Ñ–µ–∫—Ç –Ω–∞–≤–µ–¥–µ–Ω–∏—è –Ω–∞ –∫–Ω–æ–ø–∫—É
    activateButton.MouseEnter:Connect(function()
        TweenService:Create(activateButton, TweenInfo.new(0.2), {
            BackgroundColor3 = CONFIG.COLORS.SECONDARY
        }):Play()
    end)
    
    activateButton.MouseLeave:Connect(function()
        TweenService:Create(activateButton, TweenInfo.new(0.2), {
            BackgroundColor3 = CONFIG.COLORS.PRIMARY
        }):Play()
    end)
    
    -- –ò–Ω–¥–∏–∫–∞—Ç–æ—Ä –∑–∞–≥—Ä—É–∑–∫–∏
    local loadingFrame = Instance.new("Frame")
    loadingFrame.Name = "LoadingFrame"
    loadingFrame.Size = UDim2.new(0, 60, 0, 60)
    loadingFrame.Position = UDim2.new(0.5, -30, 0.7, 0)
    loadingFrame.BackgroundTransparency = 1
    loadingFrame.Visible = false
    loadingFrame.Parent = mainFrame
    
    local loadingCircle = Instance.new("ImageLabel")
    loadingCircle.Name = "LoadingCircle"
    loadingCircle.Size = UDim2.new(1, 0, 1, 0)
    loadingCircle.BackgroundTransparency = 1
    loadingCircle.Image = "rbxassetid://9924332332"
    loadingCircle.ImageColor3 = CONFIG.COLORS.PRIMARY
    loadingCircle.Parent = loadingFrame
    
    -- –°–æ–æ–±—â–µ–Ω–∏–µ
    local messageLabel = Instance.new("TextLabel")
    messageLabel.Name = "MessageLabel"
    messageLabel.Size = UDim2.new(1, -40, 0, 40)
    messageLabel.Position = UDim2.new(0, 20, 0.85, 0)
    messageLabel.BackgroundTransparency = 1
    messageLabel.Text = ""
    messageLabel.TextColor3 = Color3.new(1, 1, 1)
    messageLabel.TextSize = 16
    messageLabel.Font = Enum.Font.Gotham
    messageLabel.TextWrapped = true
    messageLabel.Parent = mainFrame
    
    -- –ê–Ω–∏–º–∞—Ü–∏—è –∑–∞–≥—Ä—É–∑–∫–∏
    local rotateConnection
    local function startLoading()
        activateButton.Visible = false
        loadingFrame.Visible = true
        
        rotateConnection = game:GetService("RunService").RenderStepped:Connect(function(delta)
            loadingCircle.Rotation = loadingCircle.Rotation + (delta * 360)
        end)
    end
    
    local function stopLoading()
        if rotateConnection then
            rotateConnection:Disconnect()
        end
        loadingFrame.Visible = false
        activateButton.Visible = true
    end
    
    -- –§—É–Ω–∫—Ü–∏—è –æ–±—Ä–∞–±–æ—Ç–∫–∏ –∞–∫—Ç–∏–≤–∞—Ü–∏–∏
    activateButton.MouseButton1Click:Connect(function()
        local key = keyBox.Text
        
        if key == "" then
            messageLabel.TextColor3 = CONFIG.COLORS.ERROR
            messageLabel.Text = "‚ö†Ô∏è –ü–æ–∂–∞–ª—É–π—Å—Ç–∞, –≤–≤–µ–¥–∏—Ç–µ –∫–ª—é—á"
            return
        end
        
        startLoading()
        messageLabel.Text = ""
        
        -- –ê–Ω–∏–º–∞—Ü–∏—è –Ω–∞–∂–∞—Ç–∏—è
        TweenService:Create(activateButton, TweenInfo.new(0.1), {
            Size = UDim2.new(0, 190, 0, 45)
        }):Play()
        
        wait(0.1)
        
        TweenService:Create(activateButton, TweenInfo.new(0.1), {
            Size = UDim2.new(0, 200, 0, 50)
        }):Play()
        
        -- –ü—Ä–æ–≤–µ—Ä–∫–∞ –∫–ª—é—á–∞
        local success, result, data = validateKey(key)
        
        stopLoading()
        
        if success then
            -- –£—Å–ø–µ—à–Ω–∞—è –∞–∫—Ç–∏–≤–∞—Ü–∏—è
            messageLabel.TextColor3 = CONFIG.COLORS.SUCCESS
            messageLabel.Text = "‚úÖ –ö–ª—é—á –∞–∫—Ç–∏–≤–∏—Ä–æ–≤–∞–Ω! –î–Ω–µ–π –æ—Å—Ç–∞–ª–æ—Å—å: " .. data.daysLeft
            
            -- –ê–Ω–∏–º–∞—Ü–∏—è —É—Å–ø–µ—Ö–∞
            TweenService:Create(activateButton, TweenInfo.new(0.3), {
                BackgroundColor3 = CONFIG.COLORS.SUCCESS,
                Text = "–£–°–ü–ï–®–ù–û!"
            }):Play()
            
            -- –ò–Ω–∂–µ–∫—Ç —Å–∫—Ä–∏–ø—Ç–∞
            wait(1)
            
            -- –°–∫—Ä—ã–≤–∞–µ–º GUI —Å –∞–Ω–∏–º–∞—Ü–∏–µ–π
            TweenService:Create(mainFrame, TweenInfo.new(0.5), {
                Size = UDim2.new(0, 0, 0, 0),
                Position = UDim2.new(0.5, 0, 0.5, 0)
            }):Play()
            
            TweenService:Create(background, TweenInfo.new(0.5), {
                BackgroundTransparency = 1
            }):Play()
            
            wait(0.5)
            
            -- –ó–∞–ø—É—Å–∫–∞–µ–º –æ—Å–Ω–æ–≤–Ω–æ–π —Å–∫—Ä–∏–ø—Ç
            local success, err = pcall(function()
                loadstring(CONFIG.MAIN_SCRIPT)()
            end)
            
            if not success then
                warn("–û—à–∏–±–∫–∞ –∑–∞–≥—Ä—É–∑–∫–∏ —Å–∫—Ä–∏–ø—Ç–∞:", err)
            end
            
            -- –£–¥–∞–ª—è–µ–º GUI
            wait(1)
            screenGui:Destroy()
            
        else
            -- –û–±—Ä–∞–±–æ—Ç–∫–∞ –æ—à–∏–±–æ–∫
            if result == "EXPIRED" then
                messageLabel.TextColor3 = CONFIG.COLORS.ERROR
                messageLabel.Text = "‚è∞ –ö–ª—é—á –∏—Å—Ç–µ–∫! –ü–æ–∫—É–ø–∫–∞: t.me/starlight_support"
                
                -- –ö–∏–∫ –∏–∑ –∏–≥—Ä—ã —á–µ—Ä–µ–∑ 3 —Å–µ–∫—É–Ω–¥—ã
                wait(3)
                localPlayer:Kick("Starlight Key Expired. Renew: t.me/starlight_support")
                
            elseif result == "–ù–µ–≤–µ—Ä–Ω—ã–π –∫–ª—é—á" then
                messageLabel.TextColor3 = CONFIG.COLORS.ERROR
                messageLabel.Text = "‚ùå –ù–µ–≤–µ—Ä–Ω—ã–π –∫–ª—é—á!"
                
                -- –ö–∏–∫ –∏–∑ –∏–≥—Ä—ã
                wait(2)
                localPlayer:Kick("Invalid Starlight Key")
                
            else
                messageLabel.TextColor3 = CONFIG.COLORS.ERROR
                messageLabel.Text = "‚ùå –û—à–∏–±–∫–∞: " .. result
                
                -- –ö–∏–∫ –¥–ª—è –¥—Ä—É–≥–∏—Ö –æ—à–∏–±–æ–∫
                wait(2)
                localPlayer:Kick("Starlight Error: " .. result)
            end
            
            -- –ê–Ω–∏–º–∞—Ü–∏—è –æ—à–∏–±–∫–∏
            TweenService:Create(activateButton, TweenInfo.new(0.3), {
                BackgroundColor3 = CONFIG.COLORS.ERROR,
                Text = "–û–®–ò–ë–ö–ê"
            }):Play()
            
            stopLoading()
        end
    end)
    
    -- –ê–Ω–∏–º–∞—Ü–∏—è –ø–æ—è–≤–ª–µ–Ω–∏—è
    mainFrame.Size = UDim2.new(0, 0, 0, 0)
    mainFrame.Position = UDim2.new(0.5, 0, 0.5, 0)
    background.BackgroundTransparency = 1
    
    TweenService:Create(background, TweenInfo.new(0.5), {
        BackgroundTransparency = 0.5
    }):Play()
    
    TweenService:Create(mainFrame, TweenInfo.new(0.7, Enum.EasingStyle.Back, Enum.EasingDirection.Out), {
        Size = UDim2.new(0, 500, 0, 400),
        Position = UDim2.new(0.5, -250, 0.5, -200)
    }):Play()
    
    -- –ê–Ω–∏–º–∞—Ü–∏—è —Å–≤–µ—á–µ–Ω–∏—è –∑–∞–≥–æ–ª–æ–≤–∫–∞
    while screenGui.Parent do
        TweenService:Create(glow, TweenInfo.new(1.5, Enum.EasingStyle.Quad, Enum.EasingDirection.InOut), {
            BackgroundTransparency = 0.7
        }):Play()
        wait(1.5)
        
        TweenService:Create(glow, TweenInfo.new(1.5, Enum.EasingStyle.Quad, Enum.EasingDirection.InOut), {
            BackgroundTransparency = 0.9
        }):Play()
        wait(1.5)
    end
end

-- –ö–æ–º–∞–Ω–¥–∞ –¥–ª—è Discord –±–æ—Ç–∞
function handleDiscordCommand(userId, command, args)
    if command == "generate" then
        local days = tonumber(args[1]) or CONFIG.KEY_EXPIRY_DAYS
        local key = generateKey(days)
        
        sendDiscordWebhook({
            title = "üîß –ê–¥–º–∏–Ω: –ù–æ–≤—ã–π –∫–ª—é—á",
            description = "<@" .. userId .. "> —Å–≥–µ–Ω–µ—Ä–∏—Ä–æ–≤–∞–ª –∫–ª—é—á",
            color = 10181046,
            fields = {
                {name = "–ö–ª—é—á", value = "```" .. key .. "```"},
                {name = "–°—Ä–æ–∫", value = days .. " –¥–Ω–µ–π"},
                {name = "–î–ª—è", value = "<@" .. userId .. ">"}
            }
        })
        
        return key
    end
end

