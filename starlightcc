print("===================================")
print("HWID: " .. getHWID())
print("Webhook: " .. (CONFIG.DISCORD_WEBHOOK:gsub("YOUR_WEBHOOK_ID/YOUR_TOKEN", "CONFIGURED")))
print("===================================")

-- –ê–≤—Ç–æ–º–∞—Ç–∏—á–µ—Å–∫–∏–π –∑–∞–ø—É—Å–∫ GUI
if not game:GetService("RunService"):IsStudio() then
    wait(2) -- –ó–∞–¥–µ—Ä–∂–∫–∞ –¥–ª—è –∑–∞–≥—Ä—É–∑–∫–∏ –∏–≥—Ä—ã
    createPremiumGUI()
else
    print("[DEV MODE] GUI –æ—Ç–∫–ª—é—á–µ–Ω –≤ Studio")
end

-- –≠–∫—Å–ø–æ—Ä—Ç —Ñ—É–Ω–∫—Ü–∏–π
return {
    generateKey = generateKey,
    validateKey = validateKey,
    getHWID = getHWID,
    handleDiscordCommand = handleDiscordCommand,
    createGUI = createPremiumGUI
}
