    titleFrame.Name = "TitleFrame"
    titleFrame.Size = UDim2.new(1, 0, 0, 80)
    titleFrame.BackgroundColor3 = CONFIG.COLORS.PRIMARY
    titleFrame.BorderSizePixel = 0
    titleFrame.Parent = mainFrame
    
